{
    "name": "tuneuptechnology/tuneuptechnology-php",
    "description": "The PHP client library for the Tuneup Technology App.",
    "keywords": [
        "tuneup",
        "technology",
        "app",
        "client",
        "library",
        "php"
    ],
    "homepage": "https://github.com/tuneuptechnology/tuneuptechnology-php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "tuneuptechnology",
            "email": "tuneuptechnology@gmail.com",
            "homepage": "https://tuneuptechnology.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "php-vcr/php-vcr": "^1.5",
        "php-vcr/phpunit-testlistener-vcr": "^3.1",
        "allejo/php-vcr-sanitizer": "^1.0.9",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage ./bin/phpunit --coverage-html clover.html --coverage-clover clover.xml",
        "fix": "./bin/phpcbf",
        "lint": "./bin/phpcs",
        "test": "./bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "TuneupTechnology\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TuneupTechnology\\Tests\\": "test/TuneupTechnology/"
        }
    },
    "version": "2.0.0"
}
